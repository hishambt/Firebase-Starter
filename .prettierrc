{
	"semi": true,
	"tabWidth": 4,
	"endOfLine": "auto",
	"singleQuote": true,
	"useTabs": true,
	"overrides": [
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript",
				"bracketSpacing": true,
				"trailingComma": "all",
				"printWidth": 170,
				"singleAttributePerLine": true
			}
		},
		{
			"files": "*.component.ts",
			"options": {
				"parser": "typescript",
				"bracketSpacing": true,
				"trailingComma": "all",
				"printWidth": 170,
				"singleAttributePerLine": true
			}
		},
		{
			"files": "*.module.ts",
			"excludeFiles": ["app.module.ts"],
			"options": {
				"parser": "typescript",
				"bracketSpacing": true,
				"trailingComma": "all",
				"printWidth": 30,
				"singleAttributePerLine": true
			}
		},
		{
			"files": ["*.html"],
			"options": {
				"bracketSameLine": true,
				"htmlWhitespaceSensitivity": "ignore",
				"tabWidth": 2,
				"parser": "html",
				"bracketSpacing": true,
				"singleQuote": true,
				"trailingComma": "none",
				"singleAttributePerLine": true,
				"printWidth": 170
			}
		},
		{
			"files": ["*.scss"],
			"options": {
				"parser": "scss",
				"singleQuote": false
			}
		},
		{
			"files": "*.js",
			"options": {
				"parser": "flow",
				"printWidth": 170
			}
		}
	]
}
