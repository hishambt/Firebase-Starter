{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Focus on Terminal on Startup",
			"type": "shell",
			"command": "echo '❤️❤️❤️❤️❤️  Welcome to Firebase Starter project by SoftSide ❤️❤️❤️❤️❤️'",
			"presentation": {
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Initialize development mode",
			"type": "shell",
			"command": "node",
			"args": ["init-task.mjs"],
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": ".*",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": ".*"
				}
			},
			"isBackground": false,
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Focus on Terminal on Startup"]
		},
		{
			"label": "Start Library",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:lib"],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building tailwind for library*$",
					"endsPattern": "^.*Compilation complete. Watching for file changes...*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Initialize development mode"]
		},
		{
			"label": "Start Backend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:backend"],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"owner": "firebase",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^i  emulators: Starting emulators.*$",
					"endsPattern": "^│ ✔  All emulators ready! It is now safe to connect your app.*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Start Library"]
		},
		{
			"label": "Start Web Application",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:web"],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Generating browser application bundles*$",
					"endsPattern": "^.*Compiled successfully.*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Start Library"]
		},
		{
			"label": "Build Library",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build:lib"],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "Build Web",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build:web"],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			},
			"dependsOn": ["Build Library"]
		},
		{
			"label": "Deploy Locally",
			"type": "shell",
			"command": "npm",
			"args": ["run", "deploy:local"],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Serving:*$",
					"endsPattern": "^.*https://localhost:4321*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			},
			"dependsOn": ["Build Web"]
		}
	]
}
