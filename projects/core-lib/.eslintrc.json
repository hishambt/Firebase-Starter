{
	"extends": "../../.eslintrc.json",
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"parserOptions": {
				"project": [
					"projects/core-lib/tsconfig.lib.json",
					"projects/core-lib/tsconfig.spec.json"
				],
				"createDefaultProgram": true
			},
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": ["app", "lib", "fs"],
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": ["app", "lib", "fs"],
						"style": "kebab-case"
					}
				]
			}
		},
		{
			"files": ["*.html"],
			"rules": {}
		}
	]
}
